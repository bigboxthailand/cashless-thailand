---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
---

<Layout title="Contact Us | Cashless Thailand">
    <Navbar />
    <main class="bg-[#050505] min-h-screen pt-40 pb-20 px-6">
        <div class="max-w-4xl mx-auto">
            <h1
                class="text-4xl md:text-5xl font-black text-white mb-12 uppercase tracking-tighter"
            >
                Contact <span class="text-[#D4AF37]">Us</span>
            </h1>

            <div
                class="grid grid-cols-1 md:grid-cols-2 gap-12 mt-12 text-white/80"
            >
                <div class="space-y-8">
                    <div>
                        <h3 class="text-xl font-bold text-white mb-2">
                            Cashless Thailand
                        </h3>
                        <p>
                            We are passionate about Bitcoin adoption and
                            security. Our team is here to help you on your
                            journey to financial sovereignty.
                        </p>
                    </div>

                    <div>
                        <h4
                            class="text-[#D4AF37] font-bold uppercase tracking-widest text-sm mb-2"
                        >
                            Address
                        </h4>
                        <p>
                            123 Sathorn Road,<br />
                            Silom, Bang Rak,<br />
                            Bangkok 10500, Thailand
                        </p>
                    </div>

                    <div>
                        <h4
                            class="text-[#D4AF37] font-bold uppercase tracking-widest text-sm mb-2"
                        >
                            Email
                        </h4>
                        <a
                            href="mailto:support@cashless.th"
                            class="hover:text-white transition-colors"
                            >support@cashless.th</a
                        >
                    </div>

                    <div>
                        <h4
                            class="text-[#D4AF37] font-bold uppercase tracking-widest text-sm mb-2"
                        >
                            Social
                        </h4>
                        <div class="flex gap-4">
                            <a
                                href="#"
                                class="hover:text-[#D4AF37] transition-colors"
                                >Facebook</a
                            >
                            <a
                                href="#"
                                class="hover:text-[#D4AF37] transition-colors"
                                >Twitter (X)</a
                            >
                            <a
                                href="#"
                                class="hover:text-[#D4AF37] transition-colors"
                                >Line Official</a
                            >
                        </div>
                    </div>
                </div>

                <div class="bg-white/5 p-8 rounded-2xl border border-white/10">
                    <h3 class="text-2xl font-bold text-white mb-6">
                        Send us a message
                    </h3>
                    <form
                        class="space-y-4"
                        onsubmit="event.preventDefault(); alert('Message sent! (Demo)');"
                    >
                        <div>
                            <label
                                class="block text-xs font-bold uppercase tracking-widest text-white/50 mb-2"
                                >Name</label
                            >
                            <input
                                type="text"
                                class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-[#D4AF37] transition-colors"
                                placeholder="Your Name"
                            />
                        </div>
                        <div>
                            <label
                                class="block text-xs font-bold uppercase tracking-widest text-white/50 mb-2"
                                >Email</label
                            >
                            <input
                                type="email"
                                class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-[#D4AF37] transition-colors"
                                placeholder="your@email.com"
                            />
                        </div>
                        <div>
                            <label
                                class="block text-xs font-bold uppercase tracking-widest text-white/50 mb-2"
                                >Message</label
                            >
                            <textarea
                                rows="4"
                                class="w-full bg-black/50 border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-[#D4AF37] transition-colors"
                                placeholder="How can we help?"></textarea>
                        </div>
                        <button
                            class="w-full bg-[#D4AF37] text-black font-bold uppercase tracking-widest py-4 rounded-xl hover:bg-[#b89530] transition-colors"
                        >
                            Send Message
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <Footer />
</Layout>
