---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import CartDrawer from "../components/CartDrawer.astro";
import { supabase } from "../lib/supabase";

// Fetch all active shops
const { data: shops, error } = await supabase
    .from("shops")
    .select("*")
    .eq("status", "active")
    .order("is_verified", { ascending: false })
    .order("created_at", { ascending: false });

if (error) {
    console.error("Error fetching shops:", error);
}

const pageTitle = "Verified Shops | Cashless Thailand";
const pageDesc =
    "เลือกชมสินค้าจากร้านค้าพาร์ทเนอร์ที่ผ่านการรับรองในเครือข่าย Cashless Thailand";
---

<Layout title={pageTitle} description={pageDesc}>
    <Navbar />
    <CartDrawer />

    <main class="bg-[#050505] min-h-screen pb-32">
        <div class="relative pt-40 pb-20 px-6 text-center overflow-hidden">
            <div
                class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-4xl h-[500px] bg-[#D4AF37]/10 rounded-full blur-[120px] pointer-events-none"
            >
            </div>

            <h1
                class="text-6xl md:text-8xl font-[900] text-white uppercase tracking-tighter mb-6 relative z-10 animate-fade-in-up"
            >
                Our Trusted <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[#D4AF37] via-[#F4E08F] to-[#D4AF37]"
                    >VENDORS</span
                >
            </h1>
            <p
                class="text-white/60 font-light text-lg max-w-2xl mx-auto relative z-10 animate-fade-in-up delay-100"
            >
                รวมรายชื่อร้านค้าพาร์ทเนอร์ที่ผ่านการตรวจสอบและรับรอง
                มั่นใจได้ในคุณภาพสินค้าและการบริการ
            </p>
        </div>

        <div class="max-w-[1400px] mx-auto px-6 md:px-12">
            {
                shops && shops.length > 0 ? (
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                        {shops.map((shop, i) => (
                            <a
                                href={`/shop/${shop.slug}`}
                                class="group relative bg-[#111] rounded-[2rem] p-8 border border-white/5 hover:border-[#D4AF37]/30 transition-all duration-500 hover:-translate-y-2 flex flex-col items-center text-center shop-card-anim"
                                style={`animation-delay: ${i * 100}ms`}
                            >
                                <div class="absolute inset-0 bg-gradient-to-b from-[#D4AF37]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-[2rem]" />

                                {/* Logo */}
                                <div class="w-24 h-24 md:w-32 md:h-32 rounded-full border-2 border-white/10 bg-[#050505] overflow-hidden mb-6 relative z-10 group-hover:border-[#D4AF37]/50 transition-colors shadow-2xl">
                                    {shop.logo_url ? (
                                        <img
                                            src={shop.logo_url}
                                            alt={shop.name}
                                            class="w-full h-full object-cover"
                                        />
                                    ) : (
                                        <div class="w-full h-full flex items-center justify-center text-4xl font-bold text-white/10 uppercase">
                                            {shop.name[0]}
                                        </div>
                                    )}
                                </div>

                                {/* Info */}
                                <div class="relative z-10 space-y-3">
                                    <div class="flex items-center justify-center gap-2">
                                        <h2 class="text-xl font-bold text-white group-hover:text-[#D4AF37] transition-colors">
                                            {shop.name}
                                        </h2>
                                        {shop.is_verified && (
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                viewBox="0 0 24 24"
                                                fill="currentColor"
                                                class="w-5 h-5 text-[#D4AF37]"
                                            >
                                                <path
                                                    fill-rule="evenodd"
                                                    d="M8.603 3.799A4.49 4.49 0 0112 2.25c1.357 0 2.573.6 3.397 1.549a4.49 4.49 0 013.498 1.307 4.491 4.491 0 011.307 3.497A4.49 4.49 0 0121.75 12a4.49 4.49 0 01-1.549 3.397 4.491 4.491 0 01-1.307 3.498 4.491 4.491 0 01-3.497 1.307A4.49 4.49 0 0112 21.75a4.49 4.49 0 01-3.397-1.549 4.49 4.49 0 01-3.498-1.306 4.491 4.491 0 01-1.307-3.498A4.49 4.49 0 012.25 12c0-1.357.6-2.573 1.549-3.397a4.49 4.49 0 011.307-3.497 4.49 4.49 0 013.497-1.307zm7.007 6.387a.75.75 0 10-1.22-.872l-3.236 4.53L9.53 12.22a.75.75 0 00-1.06 1.06l2.25 2.25a.75.75 0 001.14-.094l3.75-5.25z"
                                                    clip-rule="evenodd"
                                                />
                                            </svg>
                                        )}
                                    </div>
                                    <p class="text-white/40 text-sm line-clamp-2 font-light">
                                        {shop.description ||
                                            "No description provided."}
                                    </p>
                                </div>

                                {/* Footer */}
                                <div class="mt-8 pt-6 border-t border-white/5 w-full relative z-10 flex justify-center">
                                    <span class="text-[10px] font-bold text-[#D4AF37] uppercase tracking-[0.2em]">
                                        Visit Store →
                                    </span>
                                </div>
                            </a>
                        ))}
                    </div>
                ) : (
                    <div class="py-40 text-center">
                        <p class="text-white/20 text-xl italic">
                            No shops found.
                        </p>
                    </div>
                )
            }
        </div>
    </main>

    <Footer />
</Layout>

<style>
    .animate-fade-in-up {
        animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        opacity: 0;
        transform: translateY(20px);
    }

    .shop-card-anim {
        animation: cardReveal 0.6s ease-out forwards;
        opacity: 0;
        transform: translateY(30px);
    }

    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes cardReveal {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
