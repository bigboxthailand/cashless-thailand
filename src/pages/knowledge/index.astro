---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
import { createClient } from "@supabase/supabase-js";

const supabase = createClient(
    import.meta.env.PUBLIC_SUPABASE_URL,
    import.meta.env.PUBLIC_SUPABASE_ANON_KEY,
);

// 1. Fetch Articles
const { data: articles, error } = await supabase
    .from("articles")
    .select(
        "slug, title, excerpt, category, created_at, cover_image, author, likes_count",
    )
    .order("created_at", { ascending: false });

if (error) {
    console.error("Articles Fetch Error:", error);
}

const allArticles = articles || [];
const featured = allArticles[0]; // Newest as featured
const others = allArticles.slice(1);

const formatDate = (dateString: string) => {
    return new Date(dateString).toLocaleDateString("en-GB", {
        day: "numeric",
        month: "short",
        year: "numeric",
    });
};
const pageTitle = "Bitcoin Knowledge Base & Reports | Cashless Thailand";
const pageDesc =
    "เจาะลึกข้อมูลบิตคอยน์ รายงานสถานการณ์ Lightning Network และบทความด้านเทคโนโลยีการเงินที่เปลี่ยนโลก";
const pageKeywords =
    "Bitcoin Knowledge, รายงานบิตคอยน์, ข้อมูล Lightning Network, บิตคอยน์คืออะไร, การเงินแห่งอนาคต, Bitcoin Thailand Education";
---

<Layout title={pageTitle} description={pageDesc} keywords={pageKeywords}>
    <Navbar />

    <main class="min-h-screen bg-[#050505] relative overflow-hidden">
        {/* Header */}
        <section class="relative pt-32 pb-20 px-6 max-w-7xl mx-auto">
            <h1
                class="text-xs font-black tracking-[0.5em] text-[#D4AF37] mb-6 flex items-center gap-4"
            >
                <span class="w-12 h-[1px] bg-[#D4AF37]"></span>
                KNOWLEDGE BASE
            </h1>
            <h2
                class="text-5xl md:text-8xl font-[900] tracking-tighter uppercase leading-none text-white"
            >
                The <span class="italic text-white/10">Standard</span>
                <br /> Reports.
            </h2>
        </section>

        {
            featured && (
                <section class="max-w-7xl mx-auto px-6 mb-20">
                    <a
                        href={`/knowledge/post/${featured.slug}`}
                        class="group block relative"
                    >
                        <div class="aspect-[21/9] rounded-[2.5rem] overflow-hidden border border-white/5 group-hover:border-[#D4AF37]/30 transition-all duration-700 relative">
                            {featured.cover_image && (
                                <img
                                    src={featured.cover_image}
                                    alt={featured.title}
                                    class="absolute inset-0 w-full h-full object-cover opacity-60 group-hover:opacity-80 group-hover:scale-105 transition-all duration-1000"
                                />
                            )}
                            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent" />

                            <div class="absolute bottom-0 left-0 p-8 md:p-12 max-w-4xl">
                                <div class="flex items-center gap-4 mb-6">
                                    <span class="px-3 py-1 border border-[#D4AF37] text-[#D4AF37] text-[10px] font-black tracking-[0.2em] rounded uppercase bg-black/50 backdrop-blur-md">
                                        {featured.category}
                                    </span>
                                    <span class="text-[10px] font-bold tracking-widest text-white/60 uppercase">
                                        {formatDate(featured.created_at)}
                                    </span>
                                </div>
                                <h3 class="text-3xl md:text-5xl font-bold text-white leading-tight mb-4 group-hover:text-[#D4AF37] transition-colors">
                                    {featured.title}
                                </h3>
                                <p class="text-lg md:text-xl text-white/60 font-light line-clamp-2 max-w-2xl">
                                    {featured.excerpt}
                                </p>
                            </div>
                        </div>
                    </a>
                </section>
            )
        }

        {/* Grid */}
        <section class="max-w-7xl mx-auto px-6 pb-32">
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    others.map((post) => (
                        <a
                            href={`/knowledge/post/${post.slug}`}
                            class="group flex flex-col gap-4"
                        >
                            <div class="aspect-video rounded-3xl overflow-hidden border border-white/5 relative bg-[#111]">
                                {post.cover_image && (
                                    <img
                                        src={post.cover_image}
                                        alt={post.title}
                                        class="w-full h-full object-cover opacity-70 group-hover:opacity-100 group-hover:scale-110 transition-all duration-700"
                                        loading="lazy"
                                    />
                                )}
                                <div class="absolute top-4 left-4">
                                    <span class="px-2 py-1 bg-black/60 backdrop-blur text-[#D4AF37] text-[9px] font-black tracking-widest uppercase rounded">
                                        {post.category}
                                    </span>
                                </div>
                            </div>
                            <div class="space-y-3">
                                <div class="flex items-center justify-between text-[10px] font-bold tracking-widest text-white/30 uppercase">
                                    <span>{formatDate(post.created_at)}</span>
                                    <span class="flex items-center gap-1">
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            class="w-3 h-3"
                                            viewBox="0 0 24 24"
                                            fill="currentColor"
                                        >
                                            <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" />
                                        </svg>
                                        {post.likes_count}
                                    </span>
                                </div>
                                <h4 class="text-xl font-bold text-white leading-snug group-hover:text-[#D4AF37] transition-colors line-clamp-2">
                                    {post.title}
                                </h4>
                                <p class="text-sm text-white/40 line-clamp-2">
                                    {post.excerpt}
                                </p>
                            </div>
                        </a>
                    ))
                }
            </div>

            {/* Fallback if no articles */}
            {
                allArticles.length === 0 && (
                    <div class="text-center py-20 border border-dashed border-white/10 rounded-2xl">
                        <p class="text-white/40">
                            No articles found. Please run the migration script.
                        </p>
                    </div>
                )
            }
        </section>
    </main>
    <Footer />
</Layout>
