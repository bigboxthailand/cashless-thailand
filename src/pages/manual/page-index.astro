    },
];
---

<Layout title="Technical Detail: Home Page | Cashless Thailand Manual">
    <Navbar />

    <div class="min-h-screen bg-[#0a0a0a] pt-32 flex">
        <!-- Sidebar Navigation -->
        <aside
            class="w-72 border-r border-white/5 bg-[#050505] hidden lg:block overflow-y-auto px-6 py-10 fixed top-32 bottom-0 h-[calc(100vh-8rem)] z-20"
        >
            <nav class="space-y-8">
                {
                    sidebarItems.map((section) => (
                        <div>
                            {section.items ? (
                                <div class="space-y-4">
                                    <h4 class="text-[10px] uppercase tracking-[0.2em] text-white/30 font-black px-2">
                                        {section.title}
                                    </h4>
                                    <ul class="space-y-1">
                                        {section.items.map((item) => (
                                            <li>
                                                <a
                                                    href={item.link}
                                                    class={`block px-4 py-2 rounded-lg text-sm transition-all ${item.active ? "bg-[#D4AF37]/10 text-[#D4AF37] font-bold" : "text-white/50 hover:text-white hover:bg-white/5"}`}
                                                >
                                                    {item.title}
                                                </a>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            ) : (
                                <a
                                    href={(section as any).link}
                                    class="block px-6 py-2 text-sm text-white/50 hover:text-white hover:bg-white/5 rounded-lg transition-all font-bold"
                                >
                                    {section.title}
                                </a>
                            )}
                        </div>
                    ))
                }
            </nav>
        </aside>

        <!-- Main Documentation Content -->
        <main
            class="flex-1 lg:ml-72 px-6 md:px-12 py-12 md:py-20 lg:py-24 max-w-5xl mx-auto"
        >
            <div class="space-y-12">
                <!-- Header -->
                <header class="space-y-8 border-b border-white/5 pb-16">
                    <div
                        class="flex items-center gap-2 text-white/30 text-[10px] font-black uppercase tracking-[0.3em]"
                    >
                        <span>Directory</span>
                        <span>/</span>
                        <span class="text-[#D4AF37]">Index.astro Core</span>
                    </div>
                    <h1
                        class="text-4xl md:text-6xl font-black text-white tracking-tight"
                    >
                        Home Page (Index)
                    </h1>
                    <p class="text-white/50 text-xl leading-relaxed max-w-4xl">
                        เอกสารฉบับสมบูรณ์ที่ระบุรายละเอียดทุกส่วนประกอบ
                        (Components) ในหน้าแรก
                        พร้อมช่องทางการเชื่อมโยงจุดหมายปลายทางของทุกลิงก์ (Link
                        Mapping) เพื่อให้เห็นภาพรวมการเดินทางของผู้ใช้ (User
                        Journey) ทั้งหมด
                    </p>
                </header>

                <!-- Detailed Sections Breakdown -->
                <div class="space-y-6">
                    <div class="flex items-center justify-between mb-8">
                        <h2
                            class="text-2xl font-bold text-white uppercase tracking-wider flex items-center gap-3"
                        >
                            <span class="w-1.5 h-8 bg-[#D4AF37] rounded-full"
                            ></span>
                            Full Component Breakdown
                        </h2>
                        <span
                            class="text-[10px] font-mono text-white/20 uppercase tracking-widest italic"
                            >12 Sections Detected</span
                        >
                    </div>

                    <div class="space-y-6">
                        {
                            sections.map((section) => (
                                <div class="bg-[#111] border border-white/5 rounded-[2.5rem] overflow-hidden">
                                    <div class="px-10 py-8 bg-white/5 flex flex-col md:flex-row md:items-center justify-between gap-4 border-b border-white/5">
                                        <div class="space-y-2">
                                            <h3 class="text-2xl font-black text-white">
                                                {section.name}
                                            </h3>
                                            <p class="text-xs text-[#D4AF37] font-bold uppercase tracking-[0.2em]">
                                                {section.role}
                                            </p>
                                        </div>
                                        <div class="px-4 py-2 bg-black/40 rounded-xl border border-white/10 text-[10px] font-mono text-white/40 uppercase tracking-widest">
                                            {section.source}
                                        </div>
                                    </div>
                                    <div class="p-10">
                                        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                                            {section.details.map((detail) => (
                                                <div class="space-y-3 p-6 bg-black/20 rounded-2xl border border-white/5 hover:border-[#D4AF37]/30 transition-all group">
                                                    <div class="flex items-center gap-2 mb-2">
                                                        <span class="w-5 h-5 bg-[#D4AF37]/10 text-[#D4AF37] rounded-lg flex items-center justify-center text-[10px] font-black group-hover:scale-110 transition-transform">
                                                            ✓
                                                        </span>
                                                        <h4 class="text-sm font-black text-white/80 uppercase tracking-widest">
                                                            {detail.label}
                                                        </h4>
                                                    </div>
                                                    <p class="text-sm text-white/40 leading-relaxed font-light pl-7">
                                                        {detail.desc}
                                                    </p>
                                                </div>
                                            ))}
                                        </div>

                                        {/* --- Interactive Modules Injection --- */}

                                        {section.id === "loader" && (
                                            <div class="mt-12 pt-12 border-t border-white/5">
                                                <div class="mb-6 flex items-center gap-2">
                                                    <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse" />
                                                    <span class="text-xs font-mono text-green-500 uppercase tracking-widest">
                                                        Live Module Preview
                                                    </span>
                                                </div>
                                                <div class="bg-black border border-white/10 rounded-2xl p-12 flex justify-center items-center">
                                                    <div class="relative flex flex-col items-center gap-6">
                                                        <div class="w-16 h-16 border-4 border-[#D4AF37]/20 border-t-[#D4AF37] rounded-full animate-spin" />
                                                        <div class="flex flex-col items-center">
                                                            <span class="text-white font-black text-xl tracking-tighter">
                                                                CASHLESS
                                                                <span class="text-[#D4AF37]">
                                                                    .
                                                                </span>
                                                                TH
                                                            </span>
                                                            <span class="text-[#D4AF37] text-[8px] font-bold tracking-[0.5em] animate-pulse mt-2">
                                                                INITIALIZING
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        )}

                                        {section.id === "nav" && (
                                            <div class="mt-12 pt-12 border-t border-white/5">
                                                <div class="mb-6 flex items-center gap-2">
                                                    <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse" />
                                                    <span class="text-xs font-mono text-green-500 uppercase tracking-widest">
                                                        Live Module Preview
                                                    </span>
                                                </div>
                                                <div class="bg-black border border-white/10 rounded-2xl overflow-hidden relative h-24">
                                                    <div class="absolute inset-0 flex items-center justify-between px-8 bg-black/80 backdrop-blur-md">
                                                        <div class="text-white font-black tracking-tight text-lg">
                                                            CASHLESS
                                                            <span class="text-[#D4AF37]">
                                                                .
                                                            </span>
                                                            TH
                                                        </div>
                                                        <div class="hidden md:flex gap-8 text-xs font-bold text-white/50 uppercase tracking-widest">
                                                            <span>Home</span>
                                                            <span>Shop</span>
                                                            <span>Courses</span>
                                                        </div>
                                                        <div class="flex gap-3">
                                                            <div class="w-8 h-8 rounded-full bg-white/5 border border-white/10" />
                                                            <div class="w-8 h-8 rounded-full bg-[#D4AF37] flex items-center justify-center text-black font-bold text-xs">
                                                                A
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        )}

                                        {section.id === "hero" && (
                                            <div class="mt-12 pt-12 border-t border-white/5">
                                                <div class="mb-6 flex items-center gap-2">
                                                    <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse" />
                                                    <span class="text-xs font-mono text-green-500 uppercase tracking-widest">
                                                        Live Module Preview
                                                    </span>
                                                </div>
                                                <div class="rounded-3xl border border-white/10 overflow-hidden relative">
                                                    <Hero />
                                                </div>
                                            </div>
                                        )}

                                        {section.id === "marquee" && (
                                            <div class="mt-12 pt-12 border-t border-white/5">
                                                <div class="mb-6 flex items-center gap-2">
                                                    <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse" />
                                                    <span class="text-xs font-mono text-green-500 uppercase tracking-widest">
                                                        Live Module Preview
                                                    </span>
                                                </div>
                                                <div class="py-12 bg-black/50 rounded-3xl border border-white/10 overflow-hidden">
                                                    <Marquee />
                                                </div>
                                            </div>
                                        )}

                                        {section.id === "features" && (
                                            <div class="mt-12 pt-12 border-t border-white/5">
                                                <div class="mb-6 flex items-center gap-2">
                                                    <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse" />
                                                    <span class="text-xs font-mono text-green-500 uppercase tracking-widest">
                                                        Live Module Preview
                                                    </span>
                                                </div>
                                                <div class="bg-black/50 rounded-3xl border border-white/10 p-4 md:p-8 overflow-hidden">
                                                    <Features />
                                                </div>
                                            </div>
                                        )}

                                        {section.id === "gallery" && (
                                            <div class="mt-12 pt-12 border-t border-white/5">
                                                <div class="mb-6 flex items-center gap-2">
                                                    <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse" />
                                                    <span class="text-xs font-mono text-green-500 uppercase tracking-widest">
                                                        Live Module Preview
                                                    </span>
                                                </div>
                                                <div class="bg-black/50 rounded-3xl border border-white/10 overflow-hidden">
                                                    <ProductGallery />
                                                </div>
                                            </div>
