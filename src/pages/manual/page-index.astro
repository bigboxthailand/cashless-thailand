const sections = [
    {
        id: "loader",
        name: "1. Loader Animation & Preloader",
        role: "ระบบจัดการสถานะระหว่างโหลด (Loading State Management)",
        source: "Hardcoded JS / CSS Animations",
        details: [
            {
                label: "Initializing UI",
                desc: "แสดงข้อความ INITIALIZING พร้อมตัวหมุน (Spinner) สีทองเพื่อคุมโทนความหรูหรา",
