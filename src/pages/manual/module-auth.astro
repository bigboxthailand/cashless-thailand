---
// src/pages/manual/module-auth.astro
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";

const sections = [
    {
        id: "auth-logic",
        name: "1. Hybrid Authentication System",
        role: "ระบบยืนยันตัวตนแบบควบคู่ (Web2 + Web3)",
        source: "src/components/UserProfile.jsx",
        details: [
            {
                label: "Supabase Auth",
                desc: "ระบบ Login มาตรฐานผ่าน Email/Password สำหรับผู้ใช้ทั่วไป เน้นความง่ายและกู้คืนบัญชีได้ง่าย",
            },
            {
                label: "Web3/Metamask",
                desc: "การเชื่อมต่อผ่าน Wallet Address เพื่อความปลอดภัยสูงสุดและไม่เปิดเผยชื่อจริง (Anonymity) รองรับเครือข่าย EVM",
            },
            {
                label: "Profile Mirroring",
                desc: "ระบบเชื่อมโยงระหว่าง Wallet Address และ Profile ID ในฐานข้อมูล Supabase เพื่อให้เข้าถึงข้อมูลเดียวกันได้จากทั้งสองช่องทาง",
            },
        ],
    },
    {
        id: "tier-thresholds",
        name: "2. Membership Tier Architecture",
        role: "โครงสร้างระดับสมาชิกและการสะสมแต้ม",
        source: "membership.astro / profiles table",
        details: [
            {
                label: "Bronze (0+ Pts)",
                desc: "ระดับเริ่มต้นสำหรับทุกคนที่สมัครสมาชิก เข้าถึง Ecosystem ได้ทันที",
            },
            {
                label: "Silver (10k+ Pts)",
                desc: "รับ Cashback Multiplier 2% เพื่อสะสมความมั่งคั่งในระยะยาว",
            },
            {
                label: "Gold (50k+ Pts)",
                desc: "จุดเริ่มต้นของสิทธิพิเศษจริงจัง: ลดทันที 5%, Cashback 5% และระบบ Priority Support",
            },
        ],
    },
    {
        id: "high-net-worth",
        name: "3. High-Tier Privileges",
        role: "สิทธิประโยชน์สำหรับระดับ VIP และ Whale",
        source: "Membership Rewards Engine",
        details: [
            {
                label: "Platinum (210k+ Pts)",
                desc: "ส่วนลด 10%, Cashback 7% และสิทธิ์เข้าถึงสินค้า Drop พิเศษก่อนใคร (Early Access)",
            },
            {
                label: "Rare Earth (500k+ Pts)",
                desc: "ส่วนลด 15%, Cashback 10% และสิทธิ์ส่งฟรีตลอดชีพ (Lifetime Free Shipping)",
            },
            {
                label: "Bitcoin (2.1M+ Pts)",
                desc: "ระดับสูงสุด: ลด 21%, Cashback 21%, เลขาส่วนตัว (Concierge) และสิทธิ์ในการร่วมโหวตทิศทางระบบ (Governance)",
            },
        ],
    },
    {
        id: "point-calculation",
        name: "4. Internal Rewards Engine",
        role: "ระบบวิเคราะห์ยอดใช้จ่ายและแปลงเป็นระดับสมาชิก",
        source: "fetchProfile() -> sync_tier_logic",
        details: [
            {
                label: "Spending to Points",
                desc: "ทุกยอดการสั่งซื้อที่สำเร็จ (Confirmed) จะถูกแปลงเป็นแต้มสะสมโดยอัตโนมัติ (1 THB = 1 Point)",
            },
            {
                label: "Real-time Promotion",
                desc: "ระบบจะตรวจสอบยอดรวม (Accumulated Proof of Spend) ทันทีที่การชำระเงินได้รับการยืนยันเพื่ออัปเกรด Tier",
            },
            {
                label: "Tier Mirroring UI",
                desc: "การปรับเปลี่ยน Skin หรือ Theme ของหน้า Profile ตามระดับ Tier (เช่น สีทองสำหรับ Gold, สีรุ้งสำหรับ Platinum)",
            },
        ],
    },
    {
        id: "security-kyc",
        name: "5. Trust & Verification (KYC)",
        role: "ระบบยืนยันตัวตนเพื่อความปลอดภัยสูงสุด",
        source: "profiles.is_kyc_verified",
        details: [
            {
                label: "Email Verification",
                desc: "ขั้นแรกของการยืนยันตัวตนเพื่อป้องกันการสมัครแบบสแปมและใช้ในการรับใบเสร็จ",
            },
            {
                label: "KYC Badge",
                desc: "สัญลักษณ์พิเศษสำหรับผู้ที่ยืนยันตัวตนระดับสูง เพิ่มความน่าเชื่อถือในการทำธุรกรรมใน Marketplace",
            },
            {
                label: "Data Encryption",
                desc: "ข้อมูลส่วนตัวทั้งหมดจะถูกเข้ารหัสและจัดเก็บตามมาตรฐานความปลอดภัยเพื่อป้องกันการรั่วไหล",
            },
        ],
    },
    {
        id: "concierge-logic",
        name: "6. Personal Concierge Integration",
        role: "ระบบบริการส่วนบุคคลสำหรับสมาชิก Bitcoin Tier",
        source: "ChatCenter.jsx Priority Routing",
        details: [
            {
                label: "Direct Admin Access",
                desc: "ช่องทางพิเศษที่เชื่อมต่อสมาชิก Bitcoin Tier เข้ากับผู้ดูแลระบบโดยตรง (No Waiting)",
            },
            {
                label: "Exclusive Gifts",
                desc: "ระบบส่งของขวัญพิเศษ (Satoshi Exclusive) ให้กับสมาชิกทุกๆ สิ้นปีหรือในวาระพิเศษ",
            },
            {
                label: "Manual Override",
                desc: "แอดมินสามารถปรับระดับ Tier หรือแต้มให้ผู้ใช้ได้โดยตรงในกรณีที่มีแคมเปญออฟไลน์พิเศษ",
            },
        ],
    },
];

const sidebarItems = [
    {
        title: "Introduction",
        items: [
            { title: "Overview", link: "/manual" },
            { title: "System Workflow", link: "/manual/system-workflow" },
        ],
    },
    {
        title: "Core Features",
        items: [
            { title: "Home Page (Index)", link: "/manual/page-index" },
            { title: "Shop Catalog", link: "/manual/page-shop" },
            { title: "Product Detail", link: "/manual/page-product" },
            { title: "User Profile", link: "/manual/page-profile" },
        ],
    },
    {
        title: "Logic & State",
        items: [
            { title: "Shopping Cart", link: "/manual/module-cart" },
            { title: "Checkout System", link: "/manual/module-checkout" },
            {
                title: "Auth & Tiers",
                link: "/manual/module-auth",
                active: true,
            },
            { title: "BTC/SATS Engine", link: "/manual/module-btc" },
        ],
    },
    {
        title: "Edu-System",
        items: [
            { title: "Course Hub", link: "/manual/course-system" },
            { title: "Learn Track (Soon)", link: "/manual/learn-track" },
        ],
    },
    {
        title: "Marketing & Growth",
        items: [
            { title: "Insights & Blog", link: "/manual/blog-system" },
            { title: "Affiliate System", link: "/manual/affiliate-manual" },
        ],
    },
    {
        title: "Management Systems",
        items: [
            { title: "Admin Portal", link: "/manual/admin-interface" },
            { title: "Seller Dashboard", link: "/manual/seller-guide" },
        ],
    },
];
---

<Layout title="Membership Tiers & Auth Guide | Cashless Thailand Manual">
    <Navbar />

    <div class="min-h-screen bg-[#0a0a0a] pt-32 flex">
        <!-- Sidebar Navigation -->
        <aside
            class="w-72 border-r border-white/5 bg-[#050505] hidden lg:block overflow-y-auto px-6 py-10 fixed top-32 bottom-0 h-[calc(100vh-8rem)] z-20"
        >
            <nav class="space-y-8">
                {
                    sidebarItems.map((section) => (
                        <div>
                            {section.items ? (
                                <div class="space-y-4">
                                    <h4 class="text-[10px] uppercase tracking-[0.2em] text-white/30 font-black px-2">
                                        {section.title}
                                    </h4>
                                    <ul class="space-y-1">
                                        {section.items.map((item) => (
                                            <li>
                                                <a
                                                    href={item.link}
                                                    class={`block px-4 py-2 rounded-lg text-sm transition-all ${item.active ? "bg-[#D4AF37]/10 text-[#D4AF37] font-bold" : "text-white/50 hover:text-white hover:bg-white/5"}`}
                                                >
                                                    {item.title}
                                                </a>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            ) : (
                                <a
                                    href={(section as any).link}
                                    class="block px-6 py-2 text-sm text-white/50 hover:text-white hover:bg-white/5 rounded-lg transition-all font-bold"
                                >
                                    {section.title}
                                </a>
                            )}
                        </div>
                    ))
                }
            </nav>
        </aside>

        <!-- Main Documentation Content -->
        <main
            class="flex-1 lg:ml-72 px-6 md:px-12 py-12 md:py-20 lg:py-24 max-w-5xl mx-auto"
        >
            <div class="space-y-12">
                <!-- Header -->
                <header class="space-y-8 border-b border-white/5 pb-16">
                    <div
                        class="flex items-center gap-2 text-white/30 text-[10px] font-black uppercase tracking-[0.3em]"
                    >
                        <span>Directory</span>
                        <span>/</span>
                        <span class="text-[#D4AF37]"
                            >Identity & Economy Architecture</span
                        >
                    </div>
                    <h1
                        class="text-4xl md:text-6xl font-black text-white tracking-tight"
                    >
                        Membership & Tiers
                    </h1>
                    <p class="text-white/50 text-xl leading-relaxed max-w-4xl">
                        เจาะลึกระบบสมาชิกแบบแบ่งระดับ (Layered Rewards)
                        ที่ใช้แต้มสะสมจากการสั่งซื้อเป็นตัวกำหนดสิทธิประโยชน์
                        ผสานเข้ากับระบบ Authentication ขั้นสูงที่รองรับทั้ง
                        Email และ Web3 Wallet
                    </p>
                </header>

                <!-- Detailed Sections Breakdown -->
                <div class="space-y-6">
                    <div class="flex items-center justify-between mb-8">
                        <h2
                            class="text-2xl font-bold text-white uppercase tracking-wider flex items-center gap-3"
                        >
                            <span class="w-1.5 h-8 bg-[#D4AF37] rounded-full"
                            ></span>
                            Membership Economy Modules
                        </h2>
                        <span
                            class="text-[10px] font-mono text-white/20 uppercase tracking-widest italic"
                            >6 Core Identity Modules</span
                        >
                    </div>

                    <div class="space-y-6">
                        {
                            sections.map((section) => (
                                <div class="bg-[#111] border border-white/5 rounded-[2.5rem] overflow-hidden">
                                    <div class="px-10 py-8 bg-white/5 flex flex-col md:flex-row md:items-center justify-between gap-4 border-b border-white/5">
                                        <div class="space-y-2">
                                            <h3 class="text-2xl font-black text-white">
                                                {section.name}
                                            </h3>
                                            <p class="text-xs text-[#D4AF37] font-bold uppercase tracking-[0.2em]">
                                                {section.role}
                                            </p>
                                        </div>
                                        <div class="px-4 py-2 bg-black/40 rounded-xl border border-white/10 text-[10px] font-mono text-white/40 uppercase tracking-widest">
                                            {section.source}
                                        </div>
                                    </div>
                                    <div class="p-10">
                                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                                            {section.details.map((detail) => (
                                                <div class="space-y-3 p-6 bg-black/20 rounded-2xl border border-white/5 hover:border-[#D4AF37]/30 transition-all group">
                                                    <div class="flex items-center gap-2 mb-2">
                                                        <span class="w-5 h-5 bg-[#D4AF37]/10 text-[#D4AF37] rounded-lg flex items-center justify-center text-[10px] font-black group-hover:scale-110 transition-transform">
                                                            ✓
                                                        </span>
                                                        <h4 class="text-sm font-black text-white/80 uppercase tracking-widest">
                                                            {detail.label}
                                                        </h4>
                                                    </div>
                                                    <p class="text-sm text-white/40 leading-relaxed font-light pl-7">
                                                        {detail.desc}
                                                    </p>
                                                </div>
                                            ))}
                                        </div>
                                    </div>
                                </div>
                            ))
                        }
                    </div>
                </div>

                <!-- Strategic Summary -->
                <section
                    class="mt-20 p-12 bg-gradient-to-br from-[#111] to-black border border-white/5 rounded-[4rem] space-y-12"
                >
                    <h2
                        class="text-3xl font-black text-white flex items-center gap-4 italic"
                    >
                        <span class="text-[#D4AF37]">#</span> Retention & Gamification
                    </h2>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                        <div class="space-y-6">
                            <h4
                                class="text-xs font-black uppercase tracking-widest text-[#D4AF37] border-b border-[#D4AF37]/30 pb-2"
                            >
                                Whale Strategy
                            </h4>
                            <p class="text-sm text-white/40 leading-relaxed">
                                ระบบถูกออกแบบมาเพื่อให้การก้าวเข้าสู่ระดับ
                                "Bitcoin Tier"
                                มีความหมายเชิงสัญลักษณ์มากกว่าแค่ส่วนลด
                                แต่เป็นการก้าวเข้าสู่กลุ่มคนที่มีอิทธิพลต่อ
                                Ecosystem ผ่านสิทธิ Governance และบริการ
                                Concierge
                            </p>
                        </div>
                        <div class="space-y-6">
                            <h4
                                class="text-xs font-black uppercase tracking-widest text-[#D4AF37] border-b border-[#D4AF37]/30 pb-2"
                            >
                                Multi-Account Bridge
                            </h4>
                            <p class="text-sm text-white/40 leading-relaxed">
                                สมาชิกสามารถเลือกใช้บัญชีที่แตกต่างกันตามวาระ
                                เช่น ใช้กระเป๋า Ledger ผ่าน Metamask
                                เพื่อความปลอดภัย หรือใช้ Email เพื่อความสะดวก
                                โดยทั้งหมดจะถูกรวมยอดสะสม (Points)
                                เข้าสู่ตัวตนเดียวในที่สุด
                            </p>
                        </div>
                    </div>
                </section>

                <!-- Navigation -->
                <footer
                    class="pt-16 border-t border-white/5 flex justify-between items-center text-sm font-black uppercase tracking-[0.3em]"
                >
                    <a
                        href="/manual/module-checkout"
                        class="text-white/20 hover:text-[#D4AF37] transition-all"
                        >← Checkout System</a
                    >
                    <a
                        href="/manual/module-btc"
                        class="text-[#D4AF37] hover:text-white transition-all"
                        >Next: BTC/SATS Engine →</a
                    >
                </footer>
            </div>
        </main>
    </div>
</Layout>

<style is:global>
    aside::-webkit-scrollbar {
        width: 4px;
    }
    aside::-webkit-scrollbar-track {
        background: transparent;
    }
    aside::-webkit-scrollbar-thumb {
        background: #222;
        border-radius: 10px;
    }
</style>
