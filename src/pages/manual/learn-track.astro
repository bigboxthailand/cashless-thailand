---
// src/pages/manual/learn-track.astro
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";

// --- Mock Progress Data ---
const mockTrack = {
    title: "Bitcoin Masterclass: Zero to Hero",
    progress: 35,
    modules: [
        {
            id: 1,
            title: "Module 1: Money History",
            status: "completed",
            lessons: 4,
            xp: 100,
        },
        {
            id: 2,
            title: "Module 2: Blockchain Basics",
            status: "in-progress",
            currentLesson: "2.3 Hashing Functions",
            lessons: 6,
            xp: 150,
        },
        {
            id: 3,
            title: "Module 3: Wallet Security",
            status: "locked",
            lessons: 5,
            xp: 200,
        },
    ],
};

const sidebarItems = [
    {
        title: "Introduction",
        items: [
            { title: "Overview", link: "/manual" },
            { title: "System Workflow", link: "/manual/system-workflow" },
            { title: "Visual Logic Flows", link: "/manual/visual-flows" },
        ],
    },
    {
        title: "Core Features",
        items: [
            { title: "Home Page (Index)", link: "/manual/page-index" },
            { title: "Shop Catalog", link: "/manual/page-shop" },
            { title: "Product Detail", link: "/manual/page-product" },
            { title: "User Profile", link: "/manual/page-profile" },
        ],
    },
    {
        title: "Logic & State",
        items: [
            { title: "Shopping Cart", link: "/manual/module-cart" },
            { title: "Checkout System", link: "/manual/module-checkout" },
            { title: "Auth & Tiers", link: "/manual/module-auth" },
            { title: "BTC/SATS Engine", link: "/manual/module-btc" },
        ],
    },
    {
        title: "Edu-System",
        items: [
            { title: "Course Hub", link: "/manual/course-system" },
            {
                title: "Learn Track (Soon)",
                link: "/manual/learn-track",
                active: true,
            },
        ],
    },
    {
        title: "Marketing & Growth",
        items: [
            { title: "Insights & Blog", link: "/manual/blog-system" },
            { title: "Affiliate System", link: "/manual/affiliate-manual" },
        ],
    },
    {
        title: "Management Systems",
        items: [
            { title: "Admin Portal", link: "/manual/admin-interface" },
            { title: "Seller Dashboard", link: "/manual/seller-guide" },
        ],
    },
];
---

<Layout title="Coming Soon: Learn Track | Cashless Thailand Manual">
    <Navbar />

    <div class="min-h-screen bg-[#0a0a0a] pt-32 flex">
        <!-- Sidebar Navigation -->
        <aside
            class="w-72 border-r border-white/5 bg-[#050505] hidden lg:block overflow-y-auto px-6 py-10 fixed top-32 bottom-0 h-[calc(100vh-8rem)] z-20"
        >
            <nav class="space-y-8">
                {
                    sidebarItems.map((section) => (
                        <div>
                            {section.items ? (
                                <div class="space-y-4">
                                    <h4 class="text-[10px] uppercase tracking-[0.2em] text-white/30 font-black px-2">
                                        {section.title}
                                    </h4>
                                    <ul class="space-y-1">
                                        {section.items.map((item) => (
                                            <li>
                                                <a
                                                    href={item.link}
                                                    class={`block px-4 py-2 rounded-lg text-sm transition-all ${item.active ? "bg-[#D4AF37]/10 text-[#D4AF37] font-bold" : "text-white/50 hover:text-white hover:bg-white/5"}`}
                                                >
                                                    {item.title}
                                                </a>
                                            </li>
                                        ))}
                                    </ul>
                                </div>
                            ) : (
                                <a
                                    href={(section as any).link}
                                    class="block px-6 py-2 text-sm text-white/50 hover:text-white hover:bg-white/5 rounded-lg transition-all font-bold"
                                >
                                    {section.title}
                                </a>
                            )}
                        </div>
                    ))
                }
            </nav>
        </aside>

        <!-- Main Documentation Content -->
        <main
            class="flex-1 lg:ml-72 px-6 md:px-12 py-12 md:py-20 lg:py-24 max-w-5xl mx-auto"
        >
            <div class="space-y-12">
                <!-- Header -->
                <header class="space-y-8 border-b border-white/5 pb-16">
                    <div
                        class="flex items-center gap-2 text-white/30 text-[10px] font-black uppercase tracking-[0.3em]"
                    >
                        <span>Directory</span>
                        <span>/</span>
                        <span class="text-[#D4AF37]">Edu-System</span>
                    </div>
                    <h1
                        class="text-4xl md:text-6xl font-black text-white tracking-tight"
                    >
                        Learn Track <span
                            class="text-xs align-middle px-3 py-1 rounded-full bg-[#D4AF37]/10 text-[#D4AF37] border border-[#D4AF37]/20 tracking-wider font-bold ml-4"
                            >COMING SOON</span
                        >
                    </h1>
                    <p class="text-white/50 text-xl leading-relaxed max-w-4xl">
                        ระบบติดตามความคืบหน้าการเรียนรู้ส่วนบุคคล (Personalized
                        Learning Path)
                        ที่จะช่วยนำทางผู้ใช้งานตั้งแต่มือใหม่จนถึงระดับ Expert
                        ด้วยระบบ Gamification
                    </p>
                </header>

                <!-- Concept Preview -->
                <div class="space-y-12">
                    <div class="flex items-center justify-between mb-8">
                        <h2
                            class="text-2xl font-bold text-white uppercase tracking-wider flex items-center gap-3"
                        >
                            <span class="w-1.5 h-8 bg-[#D4AF37] rounded-full"
                            ></span>
                            Concept & Wireframe
                        </h2>
                    </div>

                    <!-- Visual Mockup: Dashboard -->
                    <div
                        class="border border-white/10 rounded-3xl bg-[#111] p-8 md:p-12 overflow-hidden relative group hover:border-[#D4AF37]/30 transition-all"
                    >
                        <div
                            class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(212,175,55,0.05),transparent_50%)]"
                        >
                        </div>

                        <div class="relative z-10 space-y-10 max-w-2xl">
                            <!-- Header Mock -->
                            <div class="flex items-end justify-between">
                                <div>
                                    <h3
                                        class="text-2xl font-bold text-white mb-2"
                                    >
                                        Current Progress
                                    </h3>
                                    <p class="text-white/40 text-sm">
                                        Track: {mockTrack.title}
                                    </p>
                                </div>
                                <div class="text-right">
                                    <div
                                        class="text-3xl font-black text-[#D4AF37]"
                                    >
                                        {mockTrack.progress}%
                                    </div>
                                    <div
                                        class="text-[10px] uppercase text-white/30"
                                    >
                                        Completed
                                    </div>
                                </div>
                            </div>

                            <!-- Progress Bar -->
                            <div
                                class="h-2 w-full bg-white/5 rounded-full overflow-hidden"
                            >
                                <div
                                    class="h-full bg-gradient-to-r from-[#D4AF37] to-[#F4E08F]"
                                    style={`width: ${mockTrack.progress}%`}
                                >
                                </div>
                            </div>

                            <!-- Modules List -->
                            <div class="space-y-4">
                                {
                                    mockTrack.modules.map((module) => (
                                        <div
                                            class={`p-4 rounded-xl border flex items-center gap-4 transition-all ${
                                                module.status === "locked"
                                                    ? "bg-black/40 border-white/5 opacity-50 contrast-50"
                                                    : module.status ===
                                                        "completed"
                                                      ? "bg-[#D4AF37]/10 border-[#D4AF37]/20"
                                                      : "bg-white/5 border-white/10"
                                            }`}
                                        >
                                            <div
                                                class={`w-10 h-10 rounded-full flex items-center justify-center shrink-0 ${
                                                    module.status ===
                                                    "completed"
                                                        ? "bg-[#D4AF37] text-black"
                                                        : module.status ===
                                                            "locked"
                                                          ? "bg-white/5 text-white/20"
                                                          : "bg-white/10 text-white"
                                                }`}
                                            >
                                                {module.status ===
                                                "completed" ? (
                                                    <span class="font-bold">
                                                        ✓
                                                    </span>
                                                ) : module.status ===
                                                  "locked" ? (
                                                    <svg
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        class="w-4 h-4"
                                                        viewBox="0 0 24 24"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        stroke-width="2"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                    >
                                                        <rect
                                                            x="3"
                                                            y="11"
                                                            width="18"
                                                            height="11"
                                                            rx="2"
                                                            ry="2"
                                                        />
                                                        <path d="M7 11V7a5 5 0 0 1 10 0v4" />
                                                    </svg>
                                                ) : (
                                                    <span class="font-bold">
                                                        {module.id}
                                                    </span>
                                                )}
                                            </div>
                                            <div class="flex-1">
                                                <h4 class="text-sm font-bold text-white">
                                                    {module.title}
                                                </h4>
                                                <div class="flex items-center gap-3 mt-1 text-[10px] text-white/40 uppercase tracking-wider">
                                                    <span>
                                                        {module.lessons} Lessons
                                                    </span>
                                                    <span>•</span>
                                                    <span class="text-[#D4AF37]">
                                                        {module.xp} XP
                                                    </span>
                                                </div>
                                            </div>
                                            {module.status ===
                                                "in-progress" && (
                                                <button class="px-3 py-1.5 bg-white text-black text-xs font-bold rounded-lg hover:scale-105 transition-transform">
                                                    Resume
                                                </button>
                                            )}
                                        </div>
                                    ))
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Features Roadmap -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                        <div
                            class="bg-[#111] p-8 rounded-3xl border border-white/5"
                        >
                            <h3 class="text-xl font-bold text-white mb-4">
                                Planned Features
                            </h3>
                            <ul class="space-y-4">
                                <li class="flex items-start gap-3">
                                    <span class="text-[#D4AF37] mt-1">▹</span>
                                    <span
                                        class="text-white/60 text-sm leading-relaxed"
                                    >
                                        <b class="text-white">XP & Leveling:</b> ระบบเก็บค่าประสบการณ์เพื่อเลื่อนระดับและปลดล็อก
                                        Badge พิเศษ
                                    </span>
                                </li>
                                <li class="flex items-start gap-3">
                                    <span class="text-[#D4AF37] mt-1">▹</span>
                                    <span
                                        class="text-white/60 text-sm leading-relaxed"
                                    >
                                        <b class="text-white"
                                            >Certificate Ref:</b
                                        > เมื่อเรียนจบจะได้รับ NFT Certificate บนเชน
                                        (Soulbound Token)
                                    </span>
                                </li>
                            </ul>
                        </div>
                        <div
                            class="bg-[#111] p-8 rounded-3xl border border-white/5"
                        >
                            <h3 class="text-xl font-bold text-white mb-4">
                                Technical Stack
                            </h3>
                            <ul class="space-y-4">
                                <li class="flex items-start gap-3">
                                    <span class="text-[#D4AF37] mt-1">▹</span>
                                    <span
                                        class="text-white/60 text-sm leading-relaxed"
                                    >
                                        <b class="text-white">Database:</b> ตาราง
                                        'user_progress' เชื่อมกับ 'lessons' แบบ Many-to-Many
                                    </span>
                                </li>
                                <li class="flex items-start gap-3">
                                    <span class="text-[#D4AF37] mt-1">▹</span>
                                    <span
                                        class="text-white/60 text-sm leading-relaxed"
                                    >
                                        <b class="text-white">State:</b> ใช้ Nanostores
                                        เพื่อซิงก์สถานะการเรียนรูข้าม Device แบบ Real-time
                                    </span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</Layout>

<style is:global>
    aside::-webkit-scrollbar {
        width: 4px;
    }
    aside::-webkit-scrollbar-track {
        background: transparent;
    }
    aside::-webkit-scrollbar-thumb {
        background: #222;
        border-radius: 10px;
    }
</style>
