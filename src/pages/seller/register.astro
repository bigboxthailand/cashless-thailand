---
import Layout from "../../layouts/Layout.astro";
import Navbar from "../../components/Navbar.astro";
import Footer from "../../components/Footer.astro";
---

<Layout title="Register Shop | Cashless Thailand">
    <Navbar />

    <main
        class="min-h-screen bg-[#050505] pt-40 pb-20 px-6 relative overflow-hidden"
    >
        <!-- Background Decor -->
        <div
            class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-[#D4AF37]/5 rounded-full blur-[120px] pointer-events-none"
        >
        </div>

        <!-- Auth check will be done by form submission -->

        <div class="max-w-xl mx-auto relative z-10">
            <div class="text-center mb-12">
                <span
                    class="text-[#D4AF37] text-xs font-black uppercase tracking-[0.2em] mb-2 block animate-fade-in"
                    >Join the Marketplace</span
                >
                <h1
                    class="text-4xl md:text-5xl font-black text-white uppercase tracking-tighter mb-4 animate-fade-in-up"
                >
                    Start Selling<br />With <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-[#D4AF37] to-[#8a7020]"
                        >Cashless</span
                    >
                </h1>
                <p
                    class="text-white/40 max-w-md mx-auto animate-fade-in-up delay-100"
                >
                    Create your store, list your products, and accept Crypto
                    payments instantly.
                </p>
            </div>

            <div
                class="bg-[#111]/80 backdrop-blur-xl border border-white/10 rounded-3xl p-8 md:p-10 shadow-[0_0_50px_rgba(212,175,55,0.1)] animate-fade-in-up delay-200"
            >
                <form id="register-shop-form" class="space-y-6">
                    <div class="space-y-2">
                        <label
                            class="text-[10px] font-bold text-white/40 uppercase tracking-widest"
                            >Shop Name <span class="text-red-500">*</span
                            ></label
                        >
                        <input
                            type="text"
                            name="name"
                            required
                            placeholder="e.g. Cyber Punk Store"
                            class="w-full bg-black/50 border border-white/10 rounded-xl px-4 py-4 text-white focus:border-[#D4AF37] focus:bg-black outline-none transition-all font-bold placeholder:font-normal"
                        />
                        <p class="text-[10px] text-white/20">
                            This will be your store URL: /shop/<span
                                id="url-preview"
                                class="text-[#D4AF37]">...</span
                            >
                        </p>
                    </div>

                    <div class="space-y-2">
                        <label
                            class="text-[10px] font-bold text-white/40 uppercase tracking-widest"
                            >Description</label
                        >
                        <textarea
                            name="description"
                            rows="4"
                            placeholder="Tell customers what you sell..."
                            class="w-full bg-black/50 border border-white/10 rounded-xl px-4 py-4 text-white focus:border-[#D4AF37] focus:bg-black outline-none transition-all resize-none"
                        ></textarea>
                    </div>

                    <!-- Payment Methods Section -->
                    <div class="space-y-4 pt-4 border-t border-white/10">
                        <div class="flex items-center gap-2 mb-2">
                            <span class="text-sm font-bold text-white/60"
                                >üí∞</span
                            >
                            <h3
                                class="text-sm font-bold text-white/60 uppercase tracking-widest"
                            >
                                Payment Methods (Optional)
                            </h3>
                        </div>
                        <p class="text-xs text-white/40 -mt-2">
                            Add payment details to receive payouts from admin
                        </p>

                        <!-- PromptPay Field -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-white/40 uppercase tracking-widest flex items-center gap-2"
                            >
                                <span>üáπüá≠</span> PromptPay ID
                            </label>
                            <input
                                type="text"
                                name="promptpay_id"
                                id="promptpay-input"
                                placeholder="‡πÄ‡∏ö‡∏≠‡∏£‡πå‡πÇ‡∏ó‡∏£ (10 ‡∏´‡∏•‡∏±‡∏Å) ‡∏´‡∏£‡∏∑‡∏≠ ‡πÄ‡∏•‡∏Ç‡∏ö‡∏±‡∏ï‡∏£‡∏õ‡∏£‡∏∞‡∏ä‡∏≤‡∏ä‡∏ô (13 ‡∏´‡∏•‡∏±‡∏Å)"
                                pattern="[0-9]{10}|[0-9]{13}"
                                class="w-full bg-black/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:border-[#D4AF37] focus:bg-black outline-none transition-all placeholder:text-white/20"
                            />
                            <p class="text-[10px] text-white/30">
                                ‡∏ï‡∏±‡∏ß‡∏≠‡∏¢‡πà‡∏≤‡∏á: 0812345678 ‡∏´‡∏£‡∏∑‡∏≠ 1234567890123
                            </p>
                        </div>

                        <!-- Lightning Address Field -->
                        <div class="space-y-2">
                            <label
                                class="text-[10px] font-bold text-white/40 uppercase tracking-widest flex items-center gap-2"
                            >
                                <span>‚ö°</span> Lightning Wallet Address
                            </label>
                            <input
                                type="text"
                                name="lightning_address"
                                placeholder="yourname@getalby.com or lnbc1..."
                                class="w-full bg-black/50 border border-white/10 rounded-xl px-4 py-3 text-white focus:border-[#D4AF37] focus:bg-black outline-none transition-all placeholder:text-white/20 font-mono text-sm"
                            />
                            <p class="text-[10px] text-white/30">
                                Lightning Address or Invoice Address
                            </p>
                        </div>
                    </div>

                    <div class="pt-4">
                        <button
                            type="submit"
                            class="w-full bg-[#D4AF37] text-black font-black uppercase tracking-widest py-4 rounded-xl hover:bg-[#b89530] transition-all shadow-[0_0_30px_rgba(212,175,55,0.3)] hover:shadow-[0_0_50px_rgba(212,175,55,0.5)] transform hover:-translate-y-1"
                        >
                            Create My Shop
                        </button>
                        <p class="text-center text-[10px] text-white/30 mt-4">
                            By creating a shop, you agree to our <a
                                href="#"
                                class="text-[#D4AF37] hover:underline"
                                >Seller Terms</a
                            >.
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <Footer />
</Layout>

<script>
    // @ts-nocheck
    import { supabase } from "../../lib/supabase";

    // Slug Generator
    const nameInput = document.querySelector('input[name="name"]');
    const slugPreview = document.getElementById("url-preview");

    nameInput?.addEventListener("input", (e) => {
        const val = e.target.value;
        const slug = val
            .toLowerCase()
            .replace(/[^a-z0-9]+/g, "-")
            .replace(/(^-|-$)+/g, "");
        slugPreview.innerText = slug || "...";
    });

    // Form Submit
    const form = document.getElementById("register-shop-form");
    form?.addEventListener("submit", async (e) => {
        e.preventDefault();
        const btn = form.querySelector("button");
        const originalText = btn.innerText;
        btn.disabled = true;
        btn.innerText = "Creating...";

        try {
            const formData = new FormData(form);
            const name = formData.get("name");
            const description = formData.get("description");
            const slug = name
                .toLowerCase()
                .replace(/[^a-z0-9]+/g, "-")
                .replace(/(^-|-$)+/g, "");

            console.log("üîÑ Checking authentication...");

            // Check both Supabase session AND wallet login
            let {
                data: { user },
                error: authError,
            } = await supabase.auth.getUser();
            const walletAddress = localStorage.getItem("user_wallet");

            console.log("üë§ Supabase User:", user ? user.email : "None");
            console.log(
                "üíº Wallet Address:",
                walletAddress ? walletAddress : "None",
            );
            console.log("‚ùå Auth error:", authError);

            let userId = null;

            if (user) {
                // Supabase authentication
                userId = user.id;
                console.log("‚úÖ Using Supabase auth with ID:", userId);
            } else if (walletAddress) {
                console.log(
                    "üîÑ Wallet user detected - checking/creating profile...",
                );

                // For wallet users, we need to find or create a profile record
                // because owner_id must be a UUID that references profiles.id
                const { data: existingProfile } = await supabase
                    .from("profiles")
                    .select("id")
                    .eq("wallet_address", walletAddress)
                    .single();

                if (existingProfile) {
                    userId = existingProfile.id;
                    console.log("‚úÖ Found existing profile:", userId);
                } else {
                    // Create a new profile for this wallet
                    const { data: newProfile, error: profileError } =
                        await supabase
                            .from("profiles")
                            .insert({
                                wallet_address: walletAddress,
                                full_name: `Wallet User ${walletAddress.slice(0, 6)}`,
                            })
                            .select("id")
                            .single();

                    if (profileError) {
                        console.error(
                            "‚ùå Failed to create profile:",
                            profileError,
                        );
                        alert("Failed to create profile. Please try again.");
                        btn.disabled = false;
                        btn.innerText = originalText;
                        return;
                    }

                    userId = newProfile.id;
                    console.log("‚úÖ Created new profile:", userId);
                }
            } else {
                // Try getting session as fallback
                const {
                    data: { session },
                } = await supabase.auth.getSession();
                console.log(
                    "üìã Session fallback:",
                    session ? session.user.email : "None",
                );

                if (session && session.user) {
                    userId = session.user.id;
                    user = session.user;
                    console.log("‚úÖ Using Session fallback with ID:", userId);
                } else {
                    alert(
                        "Please log in first. You will be redirected to the login page.",
                    );
                    window.location.href = "/login?redirect=/seller/register";
                    return;
                }
            }

            console.log("üÜî Final userId for shop creation:", userId);

            // Get payment method values (optional fields)
            const promptpayId =
                formData.get("promptpay_id")?.toString().trim() || null;
            const lightningAddress =
                formData.get("lightning_address")?.toString().trim() || null;

            // Validate PromptPay format if provided
            if (promptpayId) {
                const isValid = /^[0-9]{10}$|^[0-9]{13}$/.test(promptpayId);
                if (!isValid) {
                    alert("PromptPay ID must be 10 or 13 digits");
                    btn.disabled = false;
                    btn.innerText = originalText;
                    return;
                }
            }

            console.log("üí∞ Payment methods:", {
                promptpayId,
                lightningAddress,
            });

            const { data, error } = await supabase
                .from("shops")
                .insert({
                    owner_id: userId, // Use userId variable (works for both Supabase and wallet)
                    name,
                    slug,
                    description,
                    promptpay_id: promptpayId,
                    lightning_address: lightningAddress,
                    status: "pending", // Changed to pending - requires admin approval
                })
                .select()
                .single();

            if (error) {
                if (error.code === "23505")
                    throw new Error("Shop name already taken.");
                throw error;
            }

            // Success
            alert("Shop Created! Redirecting to Dashboard...");
            window.location.href = "/seller/dashboard";
        } catch (err) {
            alert(err.message);
            btn.disabled = false;
            btn.innerText = originalText;
        }
    });
</script>

<script>
    // @ts-nocheck
    import { supabase } from "../../lib/supabase";

    // Auto-redirect if wallet user already has a shop
    document.addEventListener("DOMContentLoaded", async () => {
        const walletAddress = localStorage.getItem("user_wallet");

        if (walletAddress) {
            try {
                // Find profile
                const { data: profile } = await supabase
                    .from("profiles")
                    .select("id")
                    .eq("wallet_address", walletAddress)
                    .single();

                if (profile) {
                    // Check for existing shop
                    const { data: shop } = await supabase
                        .from("shops")
                        .select("status")
                        .eq("owner_id", profile.id)
                        .single();

                    if (shop) {
                        console.log(
                            "‚úÖ Wallet user already has a shop, redirecting...",
                        );
                        // Redirect based on status
                        if (shop.status === "active") {
                            window.location.href = "/seller/dashboard";
                        } else {
                            window.location.href = "/seller/pending";
                        }
                    }
                }
            } catch (error) {
                // Ignore errors here, just checking
                console.log("Checking existing shop...", error);
            }
        }
    });
</script>
