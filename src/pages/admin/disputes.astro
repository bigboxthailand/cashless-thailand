---
import AdminLayout from "../../layouts/AdminLayout.astro";
import { supabase } from "../../lib/supabase";

// Fetch Disputes
const { data: disputes, error } = await supabase
    .from("disputes")
    .select(
        `
        *,
        order:orders (*, order_items(*)),
        user:profiles (full_name, phone, email)
    `,
    )
    .order("created_at", { ascending: false });

const thbFormatter = new Intl.NumberFormat("th-TH", {
    style: "currency",
    currency: "THB",
});
---

<AdminLayout title="Dispute Management">
    <div class="space-y-6">
        <h1 class="text-3xl font-black text-white uppercase tracking-wider">
            Dispute Cases
        </h1>

        <div class="grid gap-6">
            {
                disputes?.map((dispute) => (
                    <div class="bg-white/5 border border-white/10 rounded-2xl p-6 hover:border-red-500/30 transition-all">
                        <div class="flex justify-between items-start mb-6 border-b border-white/5 pb-4">
                            <div>
                                <div class="flex items-center gap-3">
                                    <span
                                        class={`px-2 py-1 rounded text-xs font-bold uppercase ${
                                            dispute.status === "open"
                                                ? "bg-red-500 text-black"
                                                : "bg-green-500/10 text-green-500"
                                        }`}
                                    >
                                        {dispute.status}
                                    </span>
                                    <span class="text-white/40 text-xs font-mono">
                                        ID: {dispute.id}
                                    </span>
                                </div>
                                <h2 class="text-xl font-bold text-white mt-2">
                                    Order #{dispute.order.id}
                                </h2>
                                <p class="text-sm text-white/60">
                                    Reporter:{" "}
                                    {dispute.user?.full_name || "Unknown"} (
                                    {dispute.user?.phone})
                                </p>
                            </div>
                            <div class="text-right">
                                <p class="text-[#D4AF37] font-black text-xl">
                                    {thbFormatter.format(
                                        dispute.order.total_price,
                                    )}
                                </p>
                                <p class="text-white/30 text-xs">
                                    {new Date(
                                        dispute.created_at,
                                    ).toLocaleString()}
                                </p>
                            </div>
                        </div>

                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="space-y-4">
                                <div class="bg-black/40 p-4 rounded-xl border border-white/5">
                                    <h3 class="text-xs font-bold text-white/50 uppercase tracking-widest mb-2">
                                        Claim Details
                                    </h3>
                                    <p class="text-white font-bold mb-1">
                                        Reason:{" "}
                                        <span class="text-red-400 capitalize">
                                            {dispute.reason.replace("_", " ")}
                                        </span>
                                    </p>
                                    <p class="text-white/80 text-sm whitespace-pre-wrap">
                                        "{dispute.description}"
                                    </p>
                                </div>

                                {/* Evidence Images Placeholder - Can Iterate JSONB here */}
                                {dispute.evidence_images &&
                                    dispute.evidence_images.length > 0 && (
                                        <div class="flex gap-2">
                                            {dispute.evidence_images.map(
                                                (img: any) => (
                                                    <a
                                                        href={img}
                                                        target="_blank"
                                                    >
                                                        <img
                                                            src={img}
                                                            class="w-16 h-16 rounded border border-white/20 object-cover"
                                                        />
                                                    </a>
                                                ),
                                            )}
                                        </div>
                                    )}
                            </div>

                            <div class="space-y-4">
                                <div class="bg-black/40 p-4 rounded-xl border border-white/5">
                                    <h3 class="text-xs font-bold text-white/50 uppercase tracking-widest mb-2">
                                        Ordered Items
                                    </h3>
                                    <ul class="space-y-2">
                                        {dispute.order.order_items.map(
                                            (item: any) => (
                                                <li class="flex justify-between text-sm text-white/70 border-b border-white/5 pb-1 last:border-0">
                                                    <span>
                                                        {item.title} (x
                                                        {item.quantity})
                                                    </span>
                                                    <span>
                                                        {thbFormatter.format(
                                                            item.price,
                                                        )}
                                                    </span>
                                                </li>
                                            ),
                                        )}
                                    </ul>
                                </div>

                                {dispute.status === "open" && (
                                    <div
                                        class="flex gap-3 justify-end pt-4"
                                        id={`actions-${dispute.id}`}
                                    >
                                        <button
                                            onclick={`resolveDispute('${dispute.id}', '${dispute.order.id}', 'refund')`}
                                            class="bg-red-600/20 hover:bg-red-600 text-red-500 hover:text-white px-4 py-2 rounded-lg font-bold border border-red-600/50 transition-all text-sm"
                                        >
                                            Refund Order
                                        </button>
                                        <button
                                            onclick={`resolveDispute('${dispute.id}', '${dispute.order.id}', 'close')`}
                                            class="bg-green-600/20 hover:bg-green-600 text-green-500 hover:text-white px-4 py-2 rounded-lg font-bold border border-green-600/50 transition-all text-sm"
                                        >
                                            Reject & Complete
                                        </button>
                                    </div>
                                )}
                            </div>
                        </div>
                    </div>
                ))
            }

            {
                disputes?.length === 0 && (
                    <div class="text-center py-20 bg-white/5 rounded-2xl border border-dashed border-white/10">
                        <p class="text-white/30">No active disputes.</p>
                    </div>
                )
            }
        </div>
    </div>
</AdminLayout>

<script>
    import { supabase } from "../../lib/supabase";

    declare global {
        interface Window {
            resolveDispute: (
                disputeId: string,
                orderId: string,
                action: string,
            ) => Promise<void>;
        }
    }

    window.resolveDispute = async (disputeId, orderId, action) => {
        if (!confirm(`Confirm action: ${action.toUpperCase()}?`)) return;

        try {
            // 1. Update Dispute Status
            const status =
                action === "refund" ? "resolved_refund" : "resolved_close";
            const { error: dError } = await supabase
                .from("disputes")
                .update({ status: status })
                .eq("id", disputeId);

            if (dError) throw dError;

            // 2. Update Order Status
            const orderStatus =
                action === "refund"
                    ? {
                          payment_status: "refunded",
                          shipping_status: "dispute_resolved",
                      }
                    : {
                          shipping_status: "delivered",
                          payment_status: "shipped",
                      };

            const { error: oError } = await supabase
                .from("orders")
                .update(orderStatus)
                .eq("id", orderId);

            if (oError) throw oError;

            alert("Resolved successfully!");
            location.reload();
        } catch (err: any) {
            alert("Error: " + err.message);
        }
    };
</script>
