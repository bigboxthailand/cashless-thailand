    </div>
</AdminLayout>

<script define:vars={{ orders }}>
    // 1. à¸ªà¹ˆà¸‡à¸‚à¹‰à¸­à¸¡à¸¹à¸¥ orders à¹€à¸‚à¹‰à¸² window à¸—à¸±à¸™à¸—à¸µà¸—à¸µà¹ˆà¹‚à¸«à¸¥à¸”
    window.allOrders = orders;

    // 2. à¹ƒà¸Šà¹‰ astro:page-load à¹€à¸žà¸·à¹ˆà¸­à¸£à¸±à¸™à¸ªà¸„à¸£à¸´à¸›à¸•à¹Œà¹ƒà¸«à¸¡à¹ˆà¸—à¸¸à¸à¸„à¸£à¸±à¹‰à¸‡à¸—à¸µà¹ˆà¹€à¸›à¸¥à¸µà¹ˆà¸¢à¸™à¸«à¸™à¹‰à¸²à¸¡à¸²
    document.addEventListener("astro:page-load", () => {
        const modal = document.getElementById("order-modal");
        const closeBtn = document.getElementById("close-modal");

        // à¸–à¹‰à¸²à¹„à¸¡à¹ˆà¸¡à¸µ modal à¹ƒà¸™à¸«à¸™à¹‰à¸²à¸™à¸µà¹‰à¹ƒà¸«à¹‰à¸«à¸¢à¸¸à¸”à¸—à¸³à¸‡à¸²à¸™ (à¸›à¹‰à¸­à¸‡à¸à¸±à¸™ Error à¹€à¸§à¸¥à¸²à¸­à¸¢à¸¹à¹ˆà¸«à¸™à¹‰à¸²à¸­à¸·à¹ˆà¸™)
        if (!modal) return;

