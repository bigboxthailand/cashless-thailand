---
// src/components/ProductGallery.astro
import LuxuryMotionGallery from "./LuxuryMotionGallery.jsx";

const galleryImages = [
  "/images/gallery/setup-1.webp",
  "/images/gallery/cafe-1.webp",
  "/images/gallery/clock-night.webp",
  "/images/gallery/node-shelf.webp",
  // ใส่เพิ่มได้เลย
  "https://images.unsplash.com/photo-1550745165-9bc0b252726f?q=80&w=800&auto=format&fit=crop",
  "https://images.unsplash.com/photo-1518770660439-4636190af475?q=80&w=800&auto=format&fit=crop"
];
---

<section class="relative bg-[#050505] overflow-hidden pb-24 pt-32">
    <div class="max-w-[1800px] mx-auto px-6 mb-16 text-center relative z-10">
        <span class="inline-block py-1 px-4 rounded-full bg-white/5 border border-[#D4AF37]/30 text-[#D4AF37] text-xs font-bold tracking-[0.3em] uppercase mb-6 backdrop-blur-md shadow-[0_0_15px_-5px_#D4AF37]">
            The Lifestyle
        </span>
        <h3 class="text-4xl md:text-7xl font-black text-white uppercase tracking-tighter leading-none drop-shadow-2xl">
            Cashless <span class="text-transparent bg-clip-text bg-gradient-to-r from-white via-white/50 to-white/10 italic">Revolution.</span>
        </h3>
    </div>

    <LuxuryMotionGallery client:load images={galleryImages} />

</section>

<style>
  /* เพิ่ม Utility Class สำหรับ 3D Perspective */
  .perspective-1000 {
    perspective: 1000px;
  }
  /* สร้าง Custom Gradient สำหรับขอบ */
  .bg-radial-gradient-to-t {
      background-image: radial-gradient(circle at center, var(--tw-gradient-stops));
  }
</style>