---
// src/components/ProductGallery.astro
const galleryImages = [
  "/images/gallery/setup-1.webp", // รูปโต๊ะคอมสวยๆ
  "/images/gallery/cafe-1.webp",  // รูป BiTTerm ในร้านกาแฟ
  "/images/gallery/clock-night.webp", // รูป CryptoClock ตอนกลางคืน
  "/images/gallery/node-shelf.webp", // รูป Node วางบนชั้น
];
---

<section class="py-20 bg-[#050505] overflow-hidden">
    <div class="max-w-[1800px] mx-auto px-6 mb-12 flex items-end justify-between">
        <div>
            <h2 class="eng text-[#D4AF37] text-xs font-black tracking-[0.5em] uppercase mb-4">Lifestyle</h2>
            <h3 class="text-4xl md:text-5xl font-black text-white uppercase tracking-tighter">
                Cashless <span class="text-white/20 italic">Vibes.</span>
            </h3>
        </div>
        <div class="hidden md:block w-1/3 h-[1px] bg-white/10"></div>
    </div>

    <div class="relative flex overflow-x-hidden group">
        <div class="flex gap-6 animate-marquee whitespace-nowrap py-4">
            {[...galleryImages, ...galleryImages, ...galleryImages].map((src, i) => (
                <div class="w-[300px] md:w-[500px] aspect-video flex-shrink-0 rounded-2xl overflow-hidden border border-white/5 relative grayscale hover:grayscale-0 transition-all duration-500 hover:scale-[1.02]">
                    <img 
                        src={src} 
                        class="w-full h-full object-cover opacity-60 hover:opacity-100 transition-opacity"
                        loading="lazy"
                        onerror="this.src='https://placehold.co/800x450/111/333?text=Gallery+Image'"
                    />
                    <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .animate-marquee {
        animation: marquee 40s linear infinite;
    }
    .group:hover .animate-marquee {
        animation-play-state: paused;
    }
    @keyframes marquee {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }
</style>