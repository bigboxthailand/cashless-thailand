<script>
    // Advanced Mouse Tracking Logic
    const container = document.getElementById('cards-container');
    const cards = document.querySelectorAll('.tilt-card');

    if (container) {
        container.onmousemove = e => {
            for(const card of cards) {
                const rect = card.getBoundingClientRect();
                const x = e.clientX - rect.left;
                const y = e.clientY - rect.top;

                // Set CSS variables for spotlight
                // @ts-ignore
                card.style.setProperty("--mouse-x", `${x}px`);
                // @ts-ignore
                card.style.setProperty("--mouse-y", `${y}px`);

                // 3D Tilt Logic (Subtle)
                const centerX = rect.width / 2;
                const centerY = rect.height / 2;
                const rotateX = ((y - centerY) / centerY) * -2; // Max rotation deg
                const rotateY = ((x - centerX) / centerX) * 2;

                // @ts-ignore
                card.style.transform = `perspective(1000px) rotateX(${rotateX}deg) rotateY(${rotateY}deg) scale3d(1.02, 1.02, 1.02)`;
            }
        };

        container.onmouseleave = () => {
            for(const card of cards) {
                // @ts-ignore
                card.style.transform = `perspective(1000px) rotateX(0deg) rotateY(0deg) scale3d(1, 1, 1)`;
            }
        };
    }
</script>

<style>
    .text-gold {
        background: linear-gradient(to right, #F9E79F, #D4AF37, #996515);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    
    .glow-text {
        text-shadow: 0 0 30px rgba(212, 175, 55, 0.3);
    }

    .animate-fade-in-up {
        animation: fadeInUp 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        opacity: 0;
        transform: translateY(20px);
    }

    @keyframes fadeInUp { to { opacity: 1; transform: translateY(0); } }

    /* Lightning Path Animation */
    .lightning-path {
        stroke-dasharray: 1000;
        stroke-dashoffset: 1000;
        animation: dash 3s linear infinite;
    }
    .delay-1 { animation-delay: 1.5s; }

    @keyframes dash {
        0% { stroke-dashoffset: 1000; opacity: 0; }
        10% { opacity: 1; }
        100% { stroke-dashoffset: 0; opacity: 0; }
    }

    /* Scroll Code Animation */
    .animate-scroll-code {
        animation: scrollText 20s linear infinite;
    }
    @keyframes scrollText {
        0% { transform: translateY(0); }
        100% { transform: translateY(-50%); }
    }

    /* Gradient Shine */
    .animate-shine {
        animation: shine 3s infinite;
    }
    @keyframes shine {
        0% { transform: translateX(-100%); }
        20% { transform: translateX(100%); }
        100% { transform: translateX(100%); }
    }

    .animate-shine-fast {
        animation: shineFast 1s forwards;
    }
    @keyframes shineFast {
        from { transform: translateX(-100%); }
        to { transform: translateX(100%); }
    }

    .animate-gradient-xy {
        animation: gradient-xy 3s ease infinite;
    }
    @keyframes gradient-xy {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
    }

    .preserve-3d { transform-style: preserve-3d; }
    .perspective-1000 { perspective: 1000px; }
</style>