---
import { supabase } from "../lib/supabase";

const { data: coupons } = await supabase
    .from("coupons")
    .select("*")
    .eq("is_active", true)
    .limit(3);

if (!coupons || coupons.length === 0) return null;
---

<section class="py-20 bg-[#050505] relative overflow-hidden">
    <div class="max-w-[1400px] mx-auto px-6 relative z-10">
        <div
            class="flex flex-col md:flex-row items-center justify-between mb-12 gap-6"
        >
            <div class="space-y-2">
                <span
                    class="text-[#D4AF37] text-[10px] font-black tracking-[0.3em] uppercase"
                    >Special Offers</span
                >
                <h2
                    class="text-4xl font-black text-white uppercase tracking-tighter"
                >
                    Active <span class="text-white/10">Coupons.</span>
                </h2>
            </div>
            <div
                class="hidden md:block h-[1px] flex-1 bg-gradient-to-r from-[#D4AF37]/20 to-transparent ml-12"
            >
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {
                coupons.map((coupon) => (
                    <div class="group relative bg-[#111] border border-white/5 rounded-[2rem] p-8 hover:border-[#D4AF37]/50 transition-all duration-500 overflow-hidden shadow-2xl">
                        <div class="absolute -top-10 -right-10 w-32 h-32 bg-[#D4AF37]/5 blur-[40px] rounded-full group-hover:bg-[#D4AF37]/10 transition-colors" />

                        <div class="relative z-10">
                            <div class="flex justify-between items-start mb-6">
                                <span class="px-3 py-1 bg-[#D4AF37]/10 border border-[#D4AF37]/30 text-[#D4AF37] text-[10px] font-black rounded uppercase tracking-widest">
                                    {coupon.discount_type === "percentage"
                                        ? "Percent Off"
                                        : "Fixed Discount"}
                                </span>
                                <div class="text-right">
                                    <p class="text-[10px] text-white/40 uppercase font-black">
                                        Limited to
                                    </p>
                                    <p class="text-xs text-white font-bold">
                                        {coupon.usage_limit
                                            ? `${coupon.usage_limit - coupon.usage_count} left`
                                            : "∞ uses"}
                                    </p>
                                </div>
                            </div>

                            <h3 class="text-5xl font-black text-white mb-2 eng">
                                {coupon.discount_value.toLocaleString()}
                                <span class="text-[#D4AF37]">
                                    {coupon.discount_type === "percentage"
                                        ? "%"
                                        : "฿"}
                                </span>
                            </h3>

                            <div class="flex items-center gap-2 mb-8">
                                <p class="text-white/60 text-sm font-medium">
                                    Min spend:
                                </p>
                                <p class="text-[#D4AF37] font-bold">
                                    {coupon.min_spend > 0
                                        ? `${coupon.min_spend.toLocaleString()} ฿`
                                        : "None"}
                                </p>
                            </div>

                            <div
                                class="relative group/copy cursor-pointer"
                                onclick={`navigator.clipboard.writeText('${coupon.code}'); alert('Copied: ${coupon.code}')`}
                            >
                                <div class="bg-[#050505] border border-dashed border-white/20 rounded-xl p-4 flex items-center justify-between group-hover/copy:border-[#D4AF37]/50 transition-colors">
                                    <span class="text-xl font-mono font-black text-white tracking-widest uppercase">
                                        {coupon.code}
                                    </span>
                                    <div class="flex items-center gap-2 text-[#D4AF37] text-[10px] font-black uppercase tracking-tighter opacity-0 group-hover/copy:opacity-100 transition-opacity">
                                        <span>Copy Code</span>
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            width="14"
                                            height="14"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="3"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                        >
                                            <>
                                                <rect
                                                    width="14"
                                                    height="14"
                                                    x="8"
                                                    y="8"
                                                    rx="2"
                                                    ry="2"
                                                />
                                                <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2" />
                                            </>
                                        </svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
