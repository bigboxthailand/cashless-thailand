---
const { activeTab } = Astro.props;

const menuItems = [
    {
        id: "dashboard",
        label: "Dashboard",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="7" height="9" x="3" y="3" rx="1"></rect><rect width="7" height="5" x="14" y="3" rx="1"></rect><rect width="7" height="9" x="14" y="12" rx="1"></rect><rect width="7" height="5" x="3" y="16" rx="1"></rect></svg>`,
        href: "/admin",
    },
    {
        id: "orders",
        label: "Orders",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M6 2 3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4Z"></path><path d="M3 6h18"></path><path d="M16 10a4 4 0 0 1-8 0"></path></svg>`,
        href: "/admin/orders",
    },
    {
        id: "customers",
        label: "Customers",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"></path><circle cx="9" cy="7" r="4"></circle><path d="M22 21v-2a4 4 0 0 0-3-3.87"></path><path d="M16 3.13a4 4 0 0 1 0 7.75"></path></svg>`,
        href: "/admin/customers",
    },
    {
        id: "products",
        label: "Products",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m7.5 4.27 9 5.15"></path><path d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z"></path><path d="m3.3 7 8.7 5 8.7-5"></path><path d="M12 22v-10"></path></svg>`,
        href: "/admin/products",
    },
    {
        id: "sellers",
        label: "Shops",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="3" y1="9" x2="21" y2="9"></line><line x1="9" y1="21" x2="9" y2="9"></line></svg>`,
        href: "/admin/sellers",
    },
    {
        id: "chat",
        label: "Support Chat",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path></svg>`,
        href: "/admin/chat",
    },
    {
        id: "settings",
        label: "Settings",
        icon: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12.22 2h-.44a2 2 0 0 0-2 2v.18a2 2 0 0 1-1 1.73l-.43.25a2 2 0 0 1-2 0l-.15-.08a2 2 0 0 0-2.73.73l-.22.38a2 2 0 0 0 .73 2.73l.15.1a2 2 0 0 1 1 1.72v.51a2 2 0 0 1-1 1.74l-.15.09a2 2 0 0 0-.73 2.73l.22.38a2 2 0 0 0 2.73.73l.15-.08a2 2 0 0 1 2 0l.43.25a2 2 0 0 1 1 1.73V20a2 2 0 0 0 2 2h.44a2 2 0 0 0 2-2v-.18a2 2 0 0 1 1-1.73l.43-.25a2 2 0 0 1 2 0l.15.08a2 2 0 0 0 2.73-.73l.22-.38a2 2 0 0 0-.73-2.73l-.15-.1a2 2 0 0 1-1-1.72v-.51a2 2 0 0 1 1-1.74l.15-.09a2 2 0 0 0 .73-2.73l-.22-.38a2 2 0 0 0-2.73-.73l-.15.08a2 2 0 0 1-2 0l-.43.25a2 2 0 0 1-1-1.73V4a2 2 0 0 0-2-2z"></path><circle cx="12" cy="12" r="3"></circle></svg>`,
        href: "/admin/settings",
    },
];
---

<!-- Mobile Bottom Toggle (Visible only on mobile) -->
<div class="md:hidden fixed bottom-6 right-6 z-[60] animate-bounce">
    <button
        id="mobile-menu-toggle"
        class="w-14 h-14 bg-[#D4AF37] text-black rounded-full shadow-[0_0_20px_rgba(212,175,55,0.4)] flex items-center justify-center text-2xl"
    >
        ☰
    </button>
</div>

<!-- Mobile Overlay -->
<div
    id="admin-mobile-overlay"
    class="fixed inset-0 bg-black/80 backdrop-blur-sm z-[70] hidden md:hidden opacity-0 transition-opacity duration-300"
>
    <div
        id="admin-mobile-menu"
        class="absolute left-0 top-0 h-full w-[80%] max-w-xs bg-[#111] border-r border-white/10 -translate-x-full transition-transform duration-300 flex flex-col"
    >
        <div
            class="p-6 border-b border-white/10 flex justify-between items-center"
        >
            <h2
                class="text-[#D4AF37] font-black uppercase tracking-widest text-lg"
            >
                Admin
            </h2>
            <button
                id="mobile-menu-close"
                class="text-white/50 hover:text-white text-xl">✕</button
            >
        </div>
        <nav class="flex-1 p-4 space-y-2 overflow-y-auto">
            {
                menuItems.map((item) => (
                    <a
                        href={item.href}
                        class={`flex items-center gap-3 px-4 py-4 rounded-xl font-bold text-base transition-all ${
                            activeTab === item.id
                                ? "bg-[#D4AF37]/10 text-[#D4AF37]"
                                : "text-white/60 hover:text-white"
                        }`}
                    >
                        <span class="w-5 h-5" set:html={item.icon} />
                        {item.label}
                    </a>
                ))
            }
        </nav>
        <div class="p-6 border-t border-white/10">
            <a
                href="/"
                class="text-white/40 font-bold uppercase tracking-tighter text-sm"
                >← Exit Admin</a
            >
        </div>
    </div>
</div>

<!-- Desktop Sidebar -->
<aside
    id="admin-sidebar-root"
    class={`group/sidebar sticky top-0 h-full bg-[#0A0A0A] border-r border-white/10 hidden md:flex flex-col shrink-0 transition-all duration-300 w-64 z-[100] pointer-events-auto`}
>
    <!-- Branding & Toggle -->
    <div
        class="p-6 border-b border-white/10 flex items-center justify-between overflow-hidden"
    >
        <div
            class="sidebar-full-content transition-opacity duration-200 flex items-center gap-3"
        >
            <div
                class="w-8 h-8 rounded bg-[#D4AF37] flex items-center justify-center text-black font-black"
            >
                C
            </div>
            <h2
                class="text-white font-black uppercase tracking-widest text-lg whitespace-nowrap"
            >
                Admin
            </h2>
        </div>
        <button
            id="sidebar-desktop-toggle"
            class="p-2 hover:bg-white/5 rounded-lg text-white/30 hover:text-[#D4AF37] transition-colors"
            title="Toggle Sidebar"
        >
            <svg
                class="w-5 h-5 toggle-icon transition-transform duration-300"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11 19l-7-7 7-7m8 14l-7-7 7-7"></path>
            </svg>
        </button>
    </div>

    <!-- Navigation -->
    <nav class="flex-1 p-4 space-y-2 overflow-y-auto overflow-x-hidden">
        {
            menuItems.map((item) => (
                <a
                    href={item.href}
                    class={`flex items-center gap-3 px-4 py-3 rounded-xl font-bold text-sm transition-all group pointer-events-auto relative z-10 ${
                        activeTab === item.id ||
                        (item.id === "dashboard" && !activeTab)
                            ? "bg-[#D4AF37]/10 text-[#D4AF37]"
                            : "text-white/60 hover:text-white hover:bg-white/5"
                    }`}
                    title={item.label}
                >
                    <span class="w-5 h-5 shrink-0" set:html={item.icon} />
                    <span class="sidebar-full-content transition-opacity duration-200 whitespace-nowrap">
                        {item.label}
                    </span>
                </a>
            ))
        }
    </nav>

    <!-- Footer -->
    <div class="p-4 border-t border-white/10 overflow-hidden">
        <a
            href="/"
            class="flex items-center gap-2 text-white/40 hover:text-white text-[10px] font-bold uppercase tracking-widest transition-colors whitespace-nowrap"
        >
            <span class="shrink-0 text-xs">←</span>
            <span class="sidebar-full-content transition-opacity duration-200"
                >Exit Admin</span
            >
        </a>
    </div>
</aside>

<style>
    /* Minimized Desktop State Classes */
    :global(.sidebar-minimized) {
        width: 80px !important;
    }
    :global(.sidebar-minimized) .sidebar-full-content {
        opacity: 0;
        pointer-events: none;
        width: 0;
    }
    :global(.sidebar-minimized) .toggle-icon {
        transform: rotate(180deg);
    }
    :global(.sidebar-minimized) nav {
        padding-left: 1.25rem;
        padding-right: 1.25rem;
    }

    /* Mobile Overlay Animation */
    .mobile-menu-open {
        display: block !important;
        opacity: 1 !important;
    }
    .mobile-menu-open #admin-mobile-menu {
        transform: translateX(0) !important;
    }
</style>

<script>
    function initSidebar() {
        const desktopToggle = document.getElementById("sidebar-desktop-toggle");
        const sidebar = document.getElementById("admin-sidebar-root");

        // Mobile elements
        const mobileToggle = document.getElementById("mobile-menu-toggle");
        const mobileClose = document.getElementById("mobile-menu-close");
        const mobileOverlay = document.getElementById("admin-mobile-overlay");

        // Restore Desktop State
        const isMinimized =
            localStorage.getItem("admin_sidebar_minimized") === "true";
        if (isMinimized && sidebar) {
            sidebar.classList.add("sidebar-minimized");
        }

        // Desktop Toggle Logic
        desktopToggle?.addEventListener("click", () => {
            if (!sidebar) return;
            const nowMinimized = sidebar.classList.toggle("sidebar-minimized");
            localStorage.setItem(
                "admin_sidebar_minimized",
                nowMinimized ? "true" : "false",
            );
        });

        // Mobile Menu Logic
        function openMobile() {
            mobileOverlay?.classList.add("mobile-menu-open");
            document.body.style.overflow = "hidden";
        }

        function closeMobile() {
            mobileOverlay?.classList.remove("mobile-menu-open");
            document.body.style.overflow = "";
        }

        mobileToggle?.addEventListener("click", openMobile);
        mobileClose?.addEventListener("click", closeMobile);
        mobileOverlay?.addEventListener("click", (e) => {
            if (e.target === mobileOverlay) closeMobile();
        });
    }

    // Run on page load and navigation
    initSidebar();
    document.addEventListener("astro:page-load", initSidebar);
</script>
